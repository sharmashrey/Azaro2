<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shreyas.io.weld.azaro.AddCourseActivity"
    android:id="@+id/LL_Course_update"
    android:weightSum="1">

    <EditText
        android:id="@+id/UpdateCourseName"
        android:layout_height="wrap_content"
        android:hint="@string/course_name"
        android:inputType="textPostalAddress"
        android:layout_width="fill_parent">
    </EditText>
    <EditText
        android:id="@+id/UpdateCourseLocation"
        android:layout_height="wrap_content"
        android:hint="@string/course_location"
        android:inputType="textPostalAddress"
        android:layout_width="fill_parent">
    </EditText>
    <EditText
        android:id="@+id/UpdateCourseWeekDay"
        android:layout_height="wrap_content"
        android:hint="Enter Week Day i.e. Mon, Tue, Wed, Thur, Fri"
        android:inputType="textPostalAddress"
        android:layout_width="fill_parent">
    </EditText>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.08"
        android:orientation="horizontal">

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:id="@+id/update_btn_time"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="213dp"
            android:id="@+id/update_in_time"
            android:hint="Select time"
            android:layout_height="wrap_content"
            android:layout_weight="0.27"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/update_btn_time"
            android:layout_toEndOf="@+id/update_btn_time" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.08"
        android:orientation="horizontal">

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:id="@+id/update_btn_end_time"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="213dp"
            android:id="@+id/update_in_end_time"
            android:hint="Select time"
            android:layout_height="wrap_content"
            android:layout_weight="0.27"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/update_btn_end_time"
            android:layout_toEndOf="@+id/update_btn_end_time" />
    </RelativeLayout>



</LinearLayout>