<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="4dp"
    android:background="@drawable/boxbackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/assignment_title"
                android:textColor="@color/title"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="Assign Title" />

            <TextView
                android:id="@+id/assignment_Id"
                android:layout_below="@id/assignment_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Assign ID"
                android:textColor="@android:color/black"
                android:padding="2dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/assignment_due_date"
                android:textColor="@android:color/black"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:text="Due Date"
                android:padding="2dp"
                android:textSize="16sp"
                android:layout_width="wrap_content" />

        </LinearLayout>

        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="144dp"
            android:id="@+id/assignment_upload_icon"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            android:text="Upload Tag"
            android:textSize="16sp"
            tools:text="Upload Tag" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>
    <!-- new layout  -->

</LinearLayout>